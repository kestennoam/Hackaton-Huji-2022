<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/AddItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:text="Add Item"
        android:textAlignment="center"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/AddItemImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Images"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@+id/AddItemTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/AddItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddItemImage"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:hint="Item Name" />

    <EditText
        android:id="@+id/AddItemDescription"
        android:layout_width="316dp"
        android:layout_height="135dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="50dp"
        android:autofillHints="Description"
        android:gravity="top"
        android:ems="10"
        android:hint="Description"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddItemName" />


    <TextView
        android:id="@+id/AddItemPriceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Price Per Day:"
        app:layout_constraintTop_toBottomOf="@+id/AddItemDescription"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        />

    <EditText
        android:id="@+id/AddItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/AddItemDescription"
        app:layout_constraintStart_toStartOf="@+id/AddItemPriceText"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="50dp"
        android:ems="10"
        android:inputType="numberDecimal"
        />

</androidx.constraintlayout.widget.ConstraintLayout>